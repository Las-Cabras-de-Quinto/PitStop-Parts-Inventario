@model PitStop_Parts_Inventario.Models.ViewModels.PagedResult<PitStop_Parts_Inventario.Models.ProveedorModel>
@{
    ViewData["Title"] = "Proveedores";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/proveedores.css" asp-append-version="true" />
}

<div class="container-fluid">
        <!-- Header Section -->
        <section class="header">
            <div class="row align-items-center mb-4">
                <div class="col-md-8">
                    <h2 class="header-title">Proveedor</h2>
                    <p class="text-muted header-subtitle">Página de gestión de proveedores</p>
                </div>
            </div>
        </section>

        <!-- Search and Actions Section -->
        <section class="search-actions-section">
            <form method="get" asp-action="Index" id="filtrosForm">
                <div class="search-actions-container">
                    <div class="search-wrapper">
                        <div class="search-container">
                            <input type="text" name="filtros.SearchTerm" class="form-control search-input" placeholder="Buscar proveedor..." value="@ViewBag.SearchTerm">
                            <i class="fas fa-search search-icon"></i>
                        </div>
                    </div>
                    
                    <div class="actions-wrapper">
                        <div class="filter-container">
                            <select name="filtros.SoloActivos" class="form-select filter-select" onchange="document.getElementById('filtrosForm').submit();">
                                <option value="">Todos los proveedores</option>
                                <option value="true" selected="@(ViewBag.SoloActivos == true ? "selected" : null)">Solo activos</option>
                                <option value="false" selected="@(ViewBag.SoloActivos == false ? "selected" : null)">Solo inactivos</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-secondary">
                            <i class="fas fa-filter"></i> Filtrar
                        </button>
                        
                        <button class="btn btn-crear" data-bs-toggle="modal" data-bs-target="#nuevoProveedorModal">
                            <i class="fas fa-plus"></i> Crear
                        </button>
                    </div>
                </div>
                <input type="hidden" name="numeroPagina" value="@Model.PageNumber" />
            </form>
        </section>

        <!-- Table Section -->
        <section class="table-section">
            <div class="card table-card">
                <div class="card-header table-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="table-title mb-0">Tabla de Proveedores</h5>
                        <div class="pagination-info">
                            <span class="pagination-text">Mostrando @(((Model.PageNumber - 1) * Model.PageSize) + 1) - @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalRecords)) de @Model.TotalRecords proveedores</span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 suppliers-table">
                            <thead class="table-dark">
                                <tr>
                                    <th class="col-id">Id Proveedor</th>
                                    <th class="col-nombre">Nombre</th>
                                    <th class="col-contacto">Contacto</th>
                                    <th class="col-direccion">Dirección</th>
                                    <th class="col-acciones">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Data.Any())
                                {
                                    @foreach (var proveedor in Model.Data)
                                    {
                                        <tr class="table-row">
                                            <td class="supplier-id">@proveedor.IdProveedor</td>
                                            <td class="supplier-name">@proveedor.Nombre</td>
                                            <td class="supplier-contact">@proveedor.Contacto</td>
                                            <td class="supplier-address">@proveedor.Direccion</td>
                                            <td class="actions-cell">
                                                <button class="btn btn-action btn-info" title="Visualizar" onclick="abrirModalVisualizarProveedor(@proveedor.IdProveedor)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-action btn-edit" title="Editar" onclick="abrirModalEditarProveedor(@proveedor.IdProveedor)">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-action btn-delete" title="Eliminar" onclick="abrirModalEliminarProveedor(@proveedor.IdProveedor)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No se encontraron proveedores</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

        <!-- Stats Cards Section -->
        <section class="stats-section">
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Total Proveedores</h6>
                                    <h2 class="stat-number">@Model.TotalRecords</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-truck stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card stat-card-current">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Página Actual</h6>
                                    <h2 class="stat-number">@Model.PageNumber</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-file-alt stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Total Páginas</h6>
                                    <h2 class="stat-number">@Model.TotalPages</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-copy stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Por Página</h6>
                                    <h2 class="stat-number">@Model.PageSize</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-list stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pagination Section -->
        @if (Model.TotalPages > 1)
        {
            <section class="pagination-section mt-4">
                <div class="pagination-wrapper">
                    <nav aria-label="Navegación de proveedores">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?numeroPagina=@(Model.PageNumber - 1)&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.SoloActivos=@ViewBag.SoloActivos">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-left"></i>
                                    </span>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                if (i == Model.PageNumber)
                                {
                                    <li class="page-item active">
                                        <span class="page-link">@i</span>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?numeroPagina=@i&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.SoloActivos=@ViewBag.SoloActivos">@i</a>
                                    </li>
                                }
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?numeroPagina=@(Model.PageNumber + 1)&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.SoloActivos=@ViewBag.SoloActivos">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-right"></i>
                                    </span>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </section>
        }
    </div>

<section class="modal-container">
<!-- Modal Nuevo Proveedor -->
<div class="modal fade" id="nuevoProveedorModal" tabindex="-1" aria-labelledby="nuevoProveedorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="nuevoProveedorModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>Nuevo Proveedor
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="nuevoProveedorForm">
                    <div class="mb-3">
                        <label for="nombreProveedor" class="form-label">Nombre Proveedor</label>
                        <input type="text" class="form-control" id="nombreProveedor" name="nombre" placeholder="Ingrese el nombre del proveedor..." required>
                    </div>
                    <div class="mb-3">
                        <label for="contactoProveedor" class="form-label">Contacto</label>
                        <input type="email" class="form-control" id="contactoProveedor" name="contacto" placeholder="correo@ejemplo.com" required>
                    </div>
                    <div class="mb-3">
                        <label for="direccionProveedor" class="form-label">Dirección</label>
                        <textarea class="form-control" id="direccionProveedor" name="direccion" rows="3" placeholder="Dirección del proveedor..." required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" onclick="guardarProveedor()">
                    <i class="fas fa-save me-1"></i>Guardar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Editar Proveedor -->
<div class="modal fade" id="editarProveedorModal" tabindex="-1" aria-labelledby="editarProveedorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="editarProveedorModalLabel">
                    <i class="fas fa-edit me-2"></i>Editar Proveedor
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editarProveedorForm">
                    <div class="mb-3">
                        <label for="editNombreProveedor" class="form-label">Nombre Proveedor</label>
                        <input type="text" class="form-control" id="editNombreProveedor" name="nombre" required>
                    </div>
                    <div class="mb-3">
                        <label for="editContactoProveedor" class="form-label">Contacto</label>
                        <input type="email" class="form-control" id="editContactoProveedor" name="contacto" required>
                    </div>
                    <div class="mb-3">
                        <label for="editDireccionProveedor" class="form-label">Dirección</label>
                        <textarea class="form-control" id="editDireccionProveedor" name="direccion" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editEstadoProveedor" class="form-label">Estado</label>
                        <select class="form-select" id="editEstadoProveedor" name="estado_id" required>
                            <option value="">Seleccionar estado</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" onclick="actualizarProveedor()">
                    <i class="fas fa-save me-1"></i>Actualizar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Visualizar Proveedor -->
<div class="modal fade" id="visualizarProveedorModal" tabindex="-1" aria-labelledby="visualizarProveedorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="visualizarProveedorModalLabel">
                    <i class="fas fa-eye me-2 text-info"></i>Detalles del Proveedor
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="product-info">
                    <div class="product-info-label">Nombre Proveedor</div>
                    <p class="product-info-value" id="visualizarNombreProveedor">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Contacto</div>
                    <p class="product-info-value" id="visualizarContactoProveedor">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Dirección</div>
                    <p class="product-info-value" id="visualizarDireccionProveedor">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Fecha de Registro</div>
                    <p class="product-info-value" id="visualizarFechaProveedor">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Estado</div>
                    <p class="product-info-value" id="visualizarEstadoProveedor">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Productos Suministrados</div>
                    <p class="product-info-value" id="visualizarProductosProveedor">Cargando...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cerrar
                </button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#editarProveedorModal">
                    <i class="fas fa-edit me-1"></i>Editar Proveedor
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Eliminar Proveedor -->
<div class="modal fade" id="eliminarProveedorModal" tabindex="-1" aria-labelledby="eliminarProveedorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="eliminarProveedorModalLabel">
                    <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Eliminar Proveedor
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>¡Atención!</strong> Esta acción no se puede deshacer.
                </div>
                <p class="text-white mb-3">¿Está seguro que desea eliminar el siguiente proveedor?</p>
                <div class="bg-dark p-3 rounded">
                    <p class="text-white mb-1"><strong>Nombre:</strong> <span id="eliminarNombreProveedor">-</span></p>
                    <p class="text-white mb-0"><strong>Contacto:</strong> <span id="eliminarContactoProveedor">-</span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" onclick="eliminarProveedor()">
                    <i class="fas fa-trash me-1"></i>Eliminar Proveedor
                </button>
            </div>
        </div>
    </div>
</div>
</section>

@Html.AntiForgeryToken()