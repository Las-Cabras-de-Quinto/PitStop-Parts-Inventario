<!-- Modal Eliminar Producto -->
<div class="modal fade" id="eliminarProductoModal" tabindex="-1" aria-labelledby="eliminarProductoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="eliminarProductoModalLabel">
                    <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Eliminar Producto
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>¡Atención!</strong> Esta acción no se puede deshacer.
                </div>
                <p class="text-white mb-3">¿Está seguro que desea eliminar el siguiente producto?</p>
                <div class="bg-dark p-3 rounded">
                    <p class="text-white mb-1"><strong>Nombre:</strong> <span id="eliminarNombreProducto">-</span></p>
                    <p class="text-white mb-1"><strong>Descripción:</strong> <span id="eliminarDescripcionProducto">-</span></p>
                    <p class="text-white mb-1"><strong>Marca:</strong> <span id="eliminarMarcaProducto">-</span></p>
                    <p class="text-white mb-0"><strong>Precio:</strong> $<span id="eliminarPrecioProducto">-</span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" onclick="eliminarProducto()">
                    <i class="fas fa-trash me-1"></i>Eliminar Producto
                </button>
            </div>
        </div>
    </div>
</div>
</section>