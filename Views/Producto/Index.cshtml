@model PitStop_Parts_Inventario.Models.ViewModels.PagedResult<PitStop_Parts_Inventario.Models.ProductoModel>
@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/productos.css" asp-append-version="true" />
}

<div class="container-fluid">
        <!-- Header Section -->
        <section class="header">
            <div class="row align-items-center mb-4">
                <div class="col-md-8">
                    <h2 class="header-title">Productos</h2>
                    <p class="text-muted header-subtitle">Página de gestión de productos</p>
                </div>
            </div>
        </section>

        <!-- Search and Actions Section -->
        <section class="search-actions-section">
            <form method="get" asp-action="Index" id="filtrosForm">
                <div class="search-actions-container">
                    <div class="search-wrapper">
                        <div class="search-container">
                            <input type="text" name="filtros.SearchTerm" class="form-control search-input" placeholder="Buscar producto..." value="@ViewBag.SearchTerm">
                            <i class="fas fa-search search-icon"></i>
                        </div>
                    </div>
                    
                    <div class="filters-wrapper">
                        <div class="filter-container">
                            <select name="filtros.CategoriaId" class="form-select filter-select" onchange="document.getElementById('filtrosForm').submit();">
                                <option value="">Todas las categorías</option>
                                @* Aquí se cargarían las categorías dinámicamente *@
                            </select>
                        </div>
                        
                        <div class="filter-container">
                            <select name="filtros.MarcaId" class="form-select filter-select" onchange="document.getElementById('filtrosForm').submit();">
                                <option value="">Todas las marcas</option>
                                @* Aquí se cargarían las marcas dinámicamente *@
                            </select>
                        </div>
                        
                        <div class="filter-container">
                            <select name="filtros.ProveedorId" class="form-select filter-select" onchange="document.getElementById('filtrosForm').submit();">
                                <option value="">Todos los proveedores</option>
                                @* Aquí se cargarían los proveedores dinámicamente *@
                            </select>
                        </div>
                        
                        <div class="filter-container">
                            <select name="filtros.ConStock" class="form-select filter-select" onchange="document.getElementById('filtrosForm').submit();">
                                <option value="">Todos los productos</option>
                                <option value="true" selected="@(ViewBag.ConStock == true ? "selected" : null)">Con Stock</option>
                                <option value="false" selected="@(ViewBag.ConStock == false ? "selected" : null)">Sin Stock</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="actions-wrapper">
                        <button type="submit" class="btn btn-secondary">
                            <i class="fas fa-filter"></i> Filtrar
                        </button>
                        <button class="btn btn-crear" data-bs-toggle="modal" data-bs-target="#nuevoProductoModal">
                            <i class="fas fa-plus"></i> Crear
                        </button>
                    </div>
                </div>
                <input type="hidden" name="numeroPagina" value="@Model.PageNumber" />
            </form>
        </section>

        <!-- Statistics Cards Section -->
        <section class="stats-section">
            <div class="row g-3 mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="stats-card">
                        <div class="stats-content">
                            <div class="stats-info">
                                <h3 class="stats-number">@Model.TotalRecords</h3>
                                <p class="stats-label">Total Productos</p>
                            </div>
                            <div class="stats-icon primary">
                                <i class="fas fa-box"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6">
                    <div class="stats-card">
                        <div class="stats-content">
                            <div class="stats-info">
                                <h3 class="stats-number">@Model.Data.Count()</h3>
                                <p class="stats-label">En Esta Página</p>
                            </div>
                            <div class="stats-icon success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6">
                    <div class="stats-card">
                        <div class="stats-content">
                            <div class="stats-info">
                                <h3 class="stats-number">@Model.PageNumber</h3>
                                <p class="stats-label">Página Actual</p>
                            </div>
                            <div class="stats-icon warning">
                                <i class="fas fa-file-alt"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6">
                    <div class="stats-card">
                        <div class="stats-content">
                            <div class="stats-info">
                                <h3 class="stats-number">@Model.TotalPages</h3>
                                <p class="stats-label">Total Páginas</p>
                            </div>
                            <div class="stats-icon danger">
                                <i class="fas fa-copy"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Products Grid Section -->
        <section class="products-section">
            <div class="row g-4">
                @if (Model.Data.Any())
                {
                    @foreach (var producto in Model.Data)
                    {
                        <!-- Product Card -->
                        <div class="col-xl-4 col-lg-6 col-md-6">
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="https://via.placeholder.com/300x200/e74c3c/ffffff?text=@producto.Nombre" alt="@producto.Nombre" />
                                    <div class="product-status status-available">
                                        @* Aquí podrías calcular el estado basado en stock *@
                                        En Stock
                                    </div>
                                </div>
                                <div class="product-content">
                                    <div class="product-header">
                                        <h4 class="product-name">@producto.Nombre</h4>
                                        <span class="product-sku">SKU: @producto.SKU</span>
                                    </div>
                                    <p class="product-description">@producto.Descripcion</p>
                                    <div class="product-details">
                                        <div class="detail-item">
                                            <span class="detail-label">Marca:</span>
                                            <span class="detail-value">@(producto.Marca?.Nombre ?? "Sin marca")</span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Categoría:</span>
                                            <span class="detail-value">
                                                @if (producto.CategoriaProductos?.Any() == true)
                                                {
                                                    @string.Join(", ", producto.CategoriaProductos.Select(cp => cp.Categoria?.Nombre).Where(n => !string.IsNullOrEmpty(n)))
                                                }
                                                else
                                                {
                                                    <text>Sin categorías</text>
                                                }
                                            </span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Precio:</span>
                                            <span class="detail-value price">$@producto.PrecioCompra.ToString("F2")</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="product-actions">
                                    <button class="btn-action btn-info" title="Visualizar" onclick="abrirModalVisualizarProducto(@producto.IdProducto)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn-action btn-warning" title="Editar" onclick="abrirModalEditarProducto(@producto.IdProducto)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn-action btn-danger" title="Eliminar" onclick="abrirModalEliminarProducto(@producto.IdProducto)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center">
                            <h3>No se encontraron productos</h3>
                            <p>No hay productos que coincidan con los criterios de búsqueda.</p>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- Pagination Section -->
        @if (Model.TotalPages > 1)
        {
            <section class="pagination-section">
                <div class="pagination-wrapper">
                    <div class="pagination-info">
                        <span>Mostrando <strong>@(((Model.PageNumber - 1) * Model.PageSize) + 1)-@(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalRecords))</strong> de <strong>@Model.TotalRecords</strong> productos</span>
                    </div>
                    <nav aria-label="Navegación de productos">
                        <ul class="pagination">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?numeroPagina=@(Model.PageNumber - 1)&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.ConStock=@ViewBag.ConStock" tabindex="-1">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                if (i == Model.PageNumber)
                                {
                                    <li class="page-item active">
                                        <a class="page-link" href="#">@i</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?numeroPagina=@i&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.ConStock=@ViewBag.ConStock">@i</a>
                                    </li>
                                }
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?numeroPagina=@(Model.PageNumber + 1)&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.ConStock=@ViewBag.ConStock">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-right"></i>
                                    </span>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </section>
        }
    </div>

@Html.AntiForgeryToken()

<section class="modal-container">
<!-- Modal Nuevo Producto -->
<div class="modal fade" id="nuevoProductoModal" tabindex="-1" aria-labelledby="nuevoProductoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="nuevoProductoModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>Nuevo Producto
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="nuevoProductoForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="nombreProducto" class="form-label">Nombre Producto</label>
                            <input type="text" class="form-control" id="nombreProducto" name="nombre" placeholder="Ingrese el nombre..." required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="marcaProducto" class="form-label">Marca</label>
                            <div class="input-group">
                                <select class="form-select" id="marcaProducto" name="marca_id" required>
                                    <option value="">Seleccionar marca</option>
                                </select>
                                <span class="input-group-text"><i class="fas fa-edit"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="skuProducto" class="form-label">SKU</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="skuProducto" name="sku" placeholder="Ingrese SKU" required>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="categoriaProducto" class="form-label">Categoría</label>
                            <div class="input-group">
                                <select class="form-select" id="categoriaProducto" name="categoria_id" required>
                                    <option value="">Seleccionar categoría</option>
                                </select>
                                <span class="input-group-text"><i class="fas fa-edit"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="proveedorProducto" class="form-label">Proveedor</label>
                            <div class="input-group">
                                <select class="form-select" id="proveedorProducto" name="proveedor_id"  required>
                                    <option value="">Seleccionar proveedor</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="precioProducto" class="form-label">Precio Unitario</label>
                            <input type="number" class="form-control" id="precioProducto" name="precio" placeholder="0" min="0" step="0.01" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="descripcionProducto" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcionProducto" name="descripcion" rows="4" placeholder="Agregar descripción del producto..." required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" onclick="guardarProducto()">
                    <i class="fas fa-save me-1"></i>Guardar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Editar Producto -->
