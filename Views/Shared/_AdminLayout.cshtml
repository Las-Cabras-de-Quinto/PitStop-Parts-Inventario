<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Sistema Administrador</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/css/layout.css" asp-append-version="true">
    <link href="~/assets/css/modals.css" rel="stylesheet" asp-append-version="true">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="layout-container">
        <!-- Overlay for mobile sidebar -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>
        
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <!-- Brand Section -->
            <div class="sidebar-brand">
                <div class="brand-logo">
                    <img src="~/assets/img/logo.png" alt="PitStopParts" class="logo-img">
                </div>
            </div>
            
            <!-- System Title -->
            <div class="system-title">
                <h4>Sistema<br>Administrador</h4>
            </div>
            
            <!-- Navigation Content -->
            <div class="nav-content">
                <!-- Dashboard Section -->
                <div class="nav-section">
                    <h6 class="nav-section-title">Dashboard</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home nav-icon"></i>
                                <span class="nav-text">Home</span>
                            </a>
                        </li>
                    </ul>
                </div>
                
                <!-- Catalogo Productos Section -->
                <div class="nav-section">
                    <h6 class="nav-section-title dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#catalogoDropdown" aria-expanded="true">
                        Catalogo Productos
                    </h6>
                    <ul class="nav flex-column collapse show" id="catalogoDropdown">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Producto" ? "active" : "")" 
                               asp-controller="Producto" asp-action="Index">
                                <i class="fas fa-box nav-icon"></i>
                                <span class="nav-text">Producto</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Marca" ? "active" : "")" 
                               asp-controller="Marca" asp-action="Index">
                                <i class="fas fa-tag nav-icon"></i>
                                <span class="nav-text">Marca</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categoria" ? "active" : "")" 
                               asp-controller="Categoria" asp-action="Index">
                                <i class="fas fa-th-large nav-icon"></i>
                                <span class="nav-text">Categoría</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Estado" ? "active" : "")" 
                               asp-controller="Estado" asp-action="Index">
                                <i class="fas fa-flag nav-icon"></i>
                                <span class="nav-text">Estado</span>
                            </a>
                        </li>
                    </ul>
                </div>
                
                <!-- Inventario Section -->
                <div class="nav-section">
                    <h6 class="nav-section-title dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#inventarioDropdown" aria-expanded="true">
                        Inventario
                    </h6>
                    <ul class="nav flex-column collapse show" id="inventarioDropdown">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Bodega" ? "active" : "")" 
                               asp-controller="Bodega" asp-action="Index">
                                <i class="fas fa-warehouse nav-icon"></i>
                                <span class="nav-text">Bodega</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "EntradaProducto" ? "active" : "")" 
                               asp-controller="EntradaProducto" asp-action="Index">
                                <i class="fas fa-arrow-right nav-icon"></i>
                                <span class="nav-text">Entrada producto</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AjusteInventario" ? "active" : "")" 
                               asp-controller="AjusteInventario" asp-action="Index">
                                <i class="fas fa-adjust nav-icon"></i>
                                <span class="nav-text">Ajuste Inventario</span>
                            </a>
                        </li>
                    </ul>
                </div>
                
                <!-- Abastecimiento Section -->
                <div class="nav-section">
                    <h6 class="nav-section-title dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#abastecimientoDropdown" aria-expanded="true">
                        Abastecimiento
                    </h6>
                    <ul class="nav flex-column collapse show" id="abastecimientoDropdown">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Proveedor" ? "active" : "")" 
                               asp-controller="Proveedor" asp-action="Index">
                                <i class="fas fa-truck nav-icon"></i>
                                <span class="nav-text">Proveedor</span>
                            </a>
                        </li>
                    </ul>
                </div>
                
                <!-- Seguridad y Usuarios Section -->
                <div class="nav-section">
                    <h6 class="nav-section-title">Seguridad y Usuarios</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Rol" ? "active" : "")" 
                               asp-controller="Rol" asp-action="Index">
                                <i class="fas fa-plus nav-icon"></i>
                                <i class="fas fa-user nav-icon-secondary"></i>
                                <span class="nav-text">Usuario</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            
            <!-- User Info Section -->
            <div class="user-info-section">
                <div class="user-info">
                    <div class="user-avatar">
                        <span class="avatar-text">US</span>
                    </div>
                    <div class="user-details">
                        <span class="user-name">Usuario</span>
                        <span class="user-email">user@example.com</span>
                    </div>
                </div>
            </div>
        </nav>
        
        <!-- Main Content -->
        <main class="main-content" id="mainContent">
            <!-- Mobile Header -->
            <div class="mobile-header d-lg-none">
                <button class="hamburger-btn" id="hamburgerBtn">
                    <i class="fas fa-bars"></i>
                </button>
                <h5 class="mobile-title">Sistema Administrador</h5>
            </div>
            
            <!-- Content Area -->
            <div class="content-area">
                @RenderBody()
            </div>
            <!-- Toast para notificaciones -->
            <div class="toast-container position-fixed bottom-0 end-0 p-3">
                <div id="successToast" class="toast" role="alert">
                    <div class="toast-header bg-success text-white">
                        <strong class="me-auto toast-title">Éxito</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Cerrar"></button>
                    </div>
                    <div class="toast-body bg-dark text-white">
                        Operación realizada exitosamente.
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Custom JS -->
    <script src="~/assets/js/layout.js" asp-append-version="true"></script>

    <script src="~/assets/js/modals.js" asp-append-version="true"></script>
    <script src="~/assets/js/modal-helpers.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
