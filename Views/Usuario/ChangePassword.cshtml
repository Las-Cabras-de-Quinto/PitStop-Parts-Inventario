@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h4 mb-1">Cambiar Contraseña</h2>
                    <p class="text-muted">Cambiar contraseña para el usuario: <strong>@Model.UserName</strong></p>
                </div>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                </a>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-key me-2"></i>Cambio de Contraseña
                    </h5>
                </div>
                <div class="card-body">
                    <form id="changePasswordForm" class="user-form" asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="UserId" type="hidden" />
                        <input asp-for="UserName" type="hidden" />
                        
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Nueva Contraseña</label>
                            <input asp-for="NewPassword" class="form-control" type="password" placeholder="Ingrese la nueva contraseña">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <div class="form-text">La contraseña debe tener al menos 6 caracteres e incluir al menos una mayúscula y un número.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Nueva Contraseña</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirme la nueva contraseña">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <!-- Información de seguridad -->
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Información de Seguridad:</strong>
                            <ul class="mb-0 mt-2">
                                <li>La contraseña debe tener al menos 6 caracteres</li>
                                <li>Debe incluir al menos una letra mayúscula</li>
                                <li>Debe incluir al menos un número</li>
                                <li>Esta acción establecerá una nueva contraseña para el usuario</li>
                            </ul>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button id="submitPasswordBtn" type="submit" class="btn btn-primary">
                                <i class="fas fa-key me-2"></i>Cambiar Contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            const form = document.getElementById('changePasswordForm');
            const submitBtn = document.getElementById('submitPasswordBtn');
            
            // Limpiar cualquier event listener previo
            $(form).off('submit');
            
            // Agregar nuestro propio event listener
            form.addEventListener('submit', function(e) {
                console.log('Formulario de cambio de contraseña enviándose...');
                
                // Validar el formulario
                if (!this.checkValidity()) {
                    e.preventDefault();
                    this.reportValidity();
                    return false;
                }
                
                // Deshabilitar el botón para evitar doble envío
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Cambiando...';
                
                // Permitir el envío
                return true;
            });

            // Validación en tiempo real para la confirmación de contraseña
            $('#ConfirmPassword').on('input', function() {
                const password = $('#NewPassword').val();
                const confirmPassword = $(this).val();
                
                if (password !== confirmPassword) {
                    this.setCustomValidity('Las contraseñas no coinciden');
                } else {
                    this.setCustomValidity('');
                }
            });
        });
    </script>
}
