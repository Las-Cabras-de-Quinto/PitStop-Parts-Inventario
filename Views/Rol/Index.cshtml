</section>

<!-- Add Role Modal -->
<div class="modal fade" id="addRoleModal" tabindex="-1" aria-labelledby="addRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRoleModalLabel">Nuevo Rol</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <!-- Basic Role Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="roleName" class="form-label">Nombre del Rol</label>
                            <input type="text" class="form-control" id="roleName" required>
                        </div>
                        <div class="col-md-6">
                            <label for="roleColor" class="form-label">Color del Rol</label>
                            <select class="form-select" id="roleColor">
                                <option value="primary">Azul (Primary)</option>
                                <option value="info">Celeste (Info)</option>
                                <option value="warning">Amarillo (Warning)</option>
                                <option value="success">Verde (Success)</option>
                                <option value="danger">Rojo (Danger)</option>
                                <option value="secondary">Gris (Secondary)</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="roleDescription" class="form-label">Descripción</label>
                        <textarea class="form-control" id="roleDescription" rows="2" placeholder="Describe las responsabilidades y alcance de este rol..."></textarea>
                    </div>
                    
                    <!-- Permissions Section -->
                    <div class="mb-4">
                        <h6 class="mb-3">Permisos del Sistema</h6>
                        
                        <div class="row">
                            <!-- Products Module -->
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">
                                            <i class="fas fa-box me-2"></i>Productos
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permProductView">
                                            <label class="form-check-label" for="permProductView">Ver productos</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permProductCreate">
                                            <label class="form-check-label" for="permProductCreate">Crear productos</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permProductEdit">
                                            <label class="form-check-label" for="permProductEdit">Editar productos</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permProductDelete">
                                            <label class="form-check-label" for="permProductDelete">Eliminar productos</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Inventory Module -->
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">
                                            <i class="fas fa-warehouse me-2"></i>Inventario
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permInventoryView">
                                            <label class="form-check-label" for="permInventoryView">Ver inventario</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permInventoryEntry">
                                            <label class="form-check-label" for="permInventoryEntry">Entradas</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permInventoryAdjust">
                                            <label class="form-check-label" for="permInventoryAdjust">Ajustes</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permInventoryTransfer">
                                            <label class="form-check-label" for="permInventoryTransfer">Transferencias</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <!-- Suppliers Module -->
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">
                                            <i class="fas fa-truck me-2"></i>Proveedores
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permSupplierView">
                                            <label class="form-check-label" for="permSupplierView">Ver proveedores</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permSupplierCreate">
                                            <label class="form-check-label" for="permSupplierCreate">Crear proveedores</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permSupplierEdit">
                                            <label class="form-check-label" for="permSupplierEdit">Editar proveedores</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permSupplierDelete">
                                            <label class="form-check-label" for="permSupplierDelete">Eliminar proveedores</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Administration Module -->
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">
                                            <i class="fas fa-cog me-2"></i>Administración
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permUserManagement">
                                            <label class="form-check-label" for="permUserManagement">Gestión de usuarios</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permRoleManagement">
                                            <label class="form-check-label" for="permRoleManagement">Gestión de roles</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permReports">
                                            <label class="form-check-label" for="permReports">Ver reportes</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="permSystemConfig">
                                            <label class="form-check-label" for="permSystemConfig">Configuración sistema</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="roleActive" checked>
                            <label class="form-check-label" for="roleActive">
                                Rol activo
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Guardar Rol</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select all/none functionality for permissions
        function addSelectAllButtons() {
            document.querySelectorAll('.card-header').forEach(header => {
                if (header.querySelector('h6')) {
                    const selectAllBtn = document.createElement('button');
                    selectAllBtn.type = 'button';
                    selectAllBtn.className = 'btn btn-outline-primary btn-sm ms-auto';
                    selectAllBtn.innerHTML = '<i class="fas fa-check-double"></i>';
                    selectAllBtn.title = 'Seleccionar todo';
                    
                    selectAllBtn.addEventListener('click', function() {
                        const card = header.closest('.card');
                        const checkboxes = card.querySelectorAll('input[type="checkbox"]');
                        const allChecked = Array.from(checkboxes).every(cb => cb.checked);
                        
                        checkboxes.forEach(cb => cb.checked = !allChecked);
                    });
                    
                    header.style.display = 'flex';
                    header.style.alignItems = 'center';
                    header.appendChild(selectAllBtn);
                }
            });
        }
        
        // Initialize select all buttons when modal is shown
        document.getElementById('addRoleModal').addEventListener('shown.bs.modal', function() {
            addSelectAllButtons();
        });
    </script>
}
