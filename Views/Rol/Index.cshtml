@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/roles.css" asp-append-version="true" />
}

<section class="header">
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h2 class="header-title">Gestión de Roles</h2>
            <p class="text-muted header-subtitle">Administración de roles y permisos del sistema</p>
        </div>
    </div>
</section>

<!-- Search and Actions Section -->
<section class="search-actions-section mb-4">
    <div class="row">
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar rol...">
                <span class="input-group-text">
                    <i class="fas fa-search"></i>
                </span>
            </div>
        </div>
        <div class="col-md-4">
            <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#addRoleModal">
                <i class="fas fa-plus me-2"></i>Nuevo Rol
            </button>
        </div>
    </div>
</section>

<!-- Roles Cards Section -->
