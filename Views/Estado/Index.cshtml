@model PitStop_Parts_Inventario.Models.ViewModels.PagedResult<PitStop_Parts_Inventario.Models.EstadoModel>
@{
    ViewData["Title"] = "Estados";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/estados.css" asp-append-version="true" />
}

<!-- Token antiforgery para las peticiones AJAX -->
@Html.AntiForgeryToken()

<div class="container-fluid">
        <!-- Header Section -->
        <section class="header">
            <div class="row align-items-center mb-4">
                <div class="col-md-8">
                    <h2 class="header-title">Estado</h2>
                    <p class="text-muted header-subtitle">Página de gestión de estados</p>
                </div>
            </div>
        </section>

        <!-- Search and Actions Section -->
        <section class="search-actions-section">
            <form method="get" asp-action="Index" id="filtrosForm">
                <div class="search-actions-container">
                    <div class="search-wrapper">
                        <div class="search-container">
                            <input type="text" name="filtros.SearchTerm" class="form-control search-input" placeholder="Buscar estado..." value="@ViewBag.SearchTerm">
                            <i class="fas fa-search search-icon"></i>
                        </div>
                    </div>
                    
                    <div class="actions-wrapper">
                        <button type="submit" class="btn btn-secondary">
                            <i class="fas fa-filter"></i> Filtrar
                        </button>
                        
                        <button type="button" class="btn btn-crear" data-bs-toggle="modal" data-bs-target="#nuevoEstadoModal">
                            <i class="fas fa-plus"></i> Crear
                        </button>
                    </div>
                </div>
                <input type="hidden" name="numeroPagina" value="@Model.PageNumber" />
            </form>
        </section>

        <!-- Table Section -->
        <section class="table-section">
            <div class="card table-card">
                <div class="card-header table-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="table-title mb-0">Tabla de Estado</h5>
                        <div class="pagination-info">
                            <span class="pagination-text">Página @Model.PageNumber de @Model.TotalPages</span>
                            @if (Model.PageNumber > 1)
                            {
                                <a href="?numeroPagina=@(Model.PageNumber - 1)&filtros.SearchTerm=@ViewBag.SearchTerm" class="btn btn-pagination">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-pagination" disabled>
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                            }
                            
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <a href="?numeroPagina=@(Model.PageNumber + 1)&filtros.SearchTerm=@ViewBag.SearchTerm" class="btn btn-pagination">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-pagination" disabled>
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 states-table">
                            <thead class="table-dark">
                                <tr>
                                    <th class="col-id">Id Estado</th>
                                    <th class="col-estado">Estado</th>
                                    <th class="col-descripcion">Descripción</th>
                                    <th class="col-acciones">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Data.Any())
                                {
                                    @foreach (var estado in Model.Data)
                                    {
                                        <tr class="table-row">
                                            <td class="state-id">@estado.IdEstado</td>
                                            <td class="state-name">@estado.Nombre</td>
                                            <td class="state-description">@estado.Descripcion</td>
                                            <td class="actions-cell">
                                                <button class="btn btn-action btn-info" title="Visualizar" onclick="abrirModalVisualizarEstado('@estado.IdEstado')">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-action btn-edit" title="Editar" onclick="abrirModalEditarEstado('@estado.IdEstado')">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-action btn-delete" title="Eliminar" onclick="abrirModalEliminarEstado('@estado.IdEstado')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            <i class="fas fa-search fa-2x mb-2"></i>
                                            <p class="mb-0">No se encontraron estados con los criterios especificados.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

        <!-- Stats Cards Section -->
        <section class="stats-section">
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Total Estados</h6>
                                    <h2 class="stat-number">@Model.TotalRecords</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-flag stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stat-card stat-card-current">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Página actual</h6>
                                    <h2 class="stat-number">@Model.PageNumber</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-file-alt stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Total Páginas</h6>
                                    <h2 class="stat-number">@Model.TotalPages</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-copy stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

<section class="modal-container">
<!-- Modal Nuevo Estado -->
<div class="modal fade" id="nuevoEstadoModal" tabindex="-1" aria-labelledby="nuevoEstadoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="nuevoEstadoModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>Nuevo Estado
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="nuevoEstadoForm">
                    <div class="mb-3">
                        <label for="nombreEstado" class="form-label">Nombre Estado</label>
                        <input type="text" class="form-control" id="nombreEstado" name="nombre" placeholder="Ingrese el estado..." required>
                    </div>
                    <div class="mb-3">
                        <label for="funcionEstado" class="form-label">Función</label>
                        <input type="text" class="form-control" id="funcionEstado" name="funcion" placeholder="Ingrese la función del estado..." required>
                    </div>
                    <div class="mb-3">
                        <label for="descripcionEstado" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcionEstado" name="descripcion" rows="4" placeholder="Agregar descripción del estado..." required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" onclick="guardarEstado()">
                    <i class="fas fa-save me-1"></i>Guardar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Editar Estado -->
<div class="modal fade" id="editarEstadoModal" tabindex="-1" aria-labelledby="editarEstadoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="editarEstadoModalLabel">
                    <i class="fas fa-edit me-2"></i>Editar Estado
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editarEstadoForm">
                    <div class="mb-3">
                        <label for="editNombreEstado" class="form-label">Nombre Estado</label>
                        <input type="text" class="form-control" id="editNombreEstado" name="nombre" value="Activo" required>
                    </div>
                    <div class="mb-3">
                        <label for="editFuncionEstado" class="form-label">Función</label>
                        <input type="text" class="form-control" id="editFuncionEstado" name="funcion" value="Habilitar funcionalidades" required>
                    </div>
                    <div class="mb-3">
                        <label for="editDescripcionEstado" class="form-label">Descripción</label>
                        <textarea class="form-control" id="editDescripcionEstado" name="descripcion" rows="4" required>Estado que indica que el elemento se encuentra operativo y disponible para su uso normal.</textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" onclick="actualizarEstado()">
                    <i class="fas fa-save me-1"></i>Actualizar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Visualizar Estado -->
<div class="modal fade" id="visualizarEstadoModal" tabindex="-1" aria-labelledby="visualizarEstadoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="visualizarEstadoModalLabel">
                    <i class="fas fa-eye me-2 text-info"></i>Detalles del Estado
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="product-info">
                    <div class="product-info-label">Nombre del Estado</div>
                    <p class="product-info-value" id="visualizarNombreEstado">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Función</div>
                    <p class="product-info-value" id="visualizarFuncionEstado">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Descripción</div>
                    <p class="product-info-value" id="visualizarDescripcionEstado">Cargando...</p>
                </div>
                
                <!-- Información adicional -->
                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="product-info">
                            <div class="product-info-label">Estado</div>
                            <p class="product-info-value">
                                <span class="badge bg-success fs-6">Habilitado</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="product-info">
                            <div class="product-info-label">Elementos</div>
                            <p class="product-info-value">
                                <span class="badge bg-warning text-dark fs-6" id="visualizarElementosEstado">Cargando...</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="product-info">
                            <div class="product-info-label">Fecha de Registro</div>
                            <p class="product-info-value" id="visualizarFechaEstado">Cargando...</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Eliminar Estado -->
<div class="modal fade" id="eliminarEstadoModal" tabindex="-1" aria-labelledby="eliminarEstadoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="eliminarEstadoModalLabel">
                    <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Eliminar Estado
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>¡Atención!</strong> Esta acción no se puede deshacer.
                </div>
                <p class="text-white mb-3">¿Está seguro que desea eliminar el siguiente estado?</p>
                <div class="bg-dark p-3 rounded">
                    <p class="text-white mb-1"><strong>Nombre:</strong> <span id="eliminarNombreEstado">-</span></p>
                    <p class="text-white mb-0"><strong>Función:</strong> <span id="eliminarFuncionEstado">-</span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" onclick="eliminarEstado()">
                    <i class="fas fa-trash me-1"></i>Eliminar Estado
                </button>
            </div>
        </div>
    </div>
</div>
</section>