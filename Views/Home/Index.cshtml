@model PitStop_Parts_Inventario.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/dashboard.css" asp-append-version="true" />
}

<div class="container-fluid">
        <!-- Header Section -->
        <section class="header">
            <div class="row align-items-center mb-4">
                <div class="col-md-12">
                    <h2 class="header-title">Dashboard de Entradas</h2>
                    <p class="text-muted header-subtitle">Panel de control para gestión rápida de entradas</p>
                </div>
            </div>
        </section>

        <!-- Stats Cards Section -->
        <section class="stats-section">
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Productos Activos</h6>
                                    <h2 class="stat-number">@Model.ProductosActivos</h2>
                                    <small class="stat-detail">-@Model.ProductosInactivos inactivos</small>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-box stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Bodegas</h6>
                                    <h2 class="stat-number">@Model.TotalBodegas</h2>
                                    <small class="stat-detail">-@Model.BodegasSinEspacioMinimo sin espacio mínimo</small>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-warehouse stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Proveedores Activos</h6>
                                    <h2 class="stat-number">@Model.ProveedoresActivos</h2>
                                    <small class="stat-detail">-@Model.ProveedoresInactivos inactivos</small>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-truck stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Usuarios del Sistema</h6>
                                    <h2 class="stat-number">@Model.UsuariosDelSistema</h2>
                                    <small class="stat-detail">-@Model.UsuariosFueraEmpresa fuera de la empresa</small>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-users stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Quick Actions Section -->
        <section class="actions-section">
            <div class="card actions-card">
                <div class="card-header actions-header">
                    <h5 class="actions-title">Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row actions-grid">
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Producto")" class="btn btn-action btn-primary-action">
                                <i class="fas fa-plus action-icon"></i>
                                <span class="action-text">Nuevo Producto</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "EntradaProducto")" class="btn btn-action btn-secondary-action">
                                <i class="fas fa-arrow-right action-icon"></i>
                                <span class="action-text">Entrada Producto</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Producto")" class="btn btn-action btn-secondary-action">
                                <i class="fas fa-eye action-icon"></i>
                                <span class="action-text">Consultar Inventario</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Proveedor")" class="btn btn-action btn-secondary-action">
                                <i class="fas fa-table action-icon"></i>
                                <span class="action-text">Ver Proveedores</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Main Content Section -->
        <section class="main-content-section">
            <div class="row">
                <!-- Recent Entries Table -->
                <div class="col-md-8">
                    <div class="card entries-card">
                        <div class="card-header entries-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="entries-title">Últimas Entradas Registradas</h5>
                                <button class="btn btn-outline-primary btn-sm view-all-btn">
                                    <i class="fas fa-eye"></i> Ver todo
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 entries-table">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Producto</th>
                                            <th>Fecha</th>
                                            <th>Bodega</th>
                                            <th>Proveedor</th>
                                            <th>Cantidad</th>
                                            <th>Usuario</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.UltimasEntradas.Any())
                                        {
                                            @foreach (var entrada in Model.UltimasEntradas)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="product-info">
                                                                <div class="product-name">@entrada.Producto?.Nombre</div>
                                                                <small class="text-muted">SKU: @entrada.Producto?.SKU</small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="date-info">
                                                            <div>@entrada.Fecha.ToString("dd/MM/yyyy")</div>
                                                            <small class="text-muted">@entrada.Fecha.ToString("HH:mm")</small>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info">@entrada.Bodega?.Nombre</span>
                                                    </td>
                                                    <td>
                                                        @if (entrada.Producto?.ProveedorProductos?.Any() == true)
                                                        {
                                                            <span class="badge bg-secondary">@entrada.Producto.ProveedorProductos.First().Proveedor?.Nombre</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-success">@entrada.CantidadProducto</span>
                                                    </td>
                                                    <td>
                                                        <small>@entrada.Usuario?.UserName</small>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="6" class="text-center text-muted py-4">
                                                    <i class="fas fa-inbox fa-2x mb-2"></i>
                                                    <div>No hay entradas registradas</div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Alerts Sidebar -->
                <div class="col-md-4">
                    <div class="card alerts-card">
                        <div class="card-header alerts-header">
                            <h5 class="alerts-title">
                                <i class="fas fa-exclamation-triangle text-warning"></i> Alertas del Sistema
                            </h5>
                        </div>
                        <div class="card-body alerts-body">
                            @if (Model.AlertasSistema.Any())
                            {
                                @foreach (var alerta in Model.AlertasSistema)
                                {
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        @alerta
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-4">
                                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                    <div>No hay alertas del sistema</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Daily Summary Section -->
        <section class="summary-section">
            <div class="card summary-card">
                <div class="card-body">
                    <h5 class="summary-title">Resumen del Día</h5>
                    <div class="row text-center summary-stats">
                        <div class="col-md-4">
                            <h3 class="summary-number text-primary">@Model.EntradasHoy</h3>
                            <p class="summary-label">Entradas hoy</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="summary-number text-success">@Model.ProductosDistintosHoy</h3>
                            <p class="summary-label">Productos distintos</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="summary-number text-info">@Model.ProveedoresInvolucradosHoy</h3>
                            <p class="summary-label">Proveedores involucrados</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
