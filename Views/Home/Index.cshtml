@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/dashboard.css" asp-append-version="true" />
}

<div class="container-fluid">
        <!-- Header Section -->
        <section class="header">
            <div class="row align-items-center mb-4">
                <div class="col-md-12">
                    <h2 class="header-title">Dashboard de Entradas</h2>
                    <p class="text-muted header-subtitle">Panel de control para gestión rápida de entradas</p>
                </div>
            </div>
        </section>

        <!-- Stats Cards Section -->
        <section class="stats-section">
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Productos Activos</h6>
                                    <h2 class="stat-number">88</h2>
                                    <small class="stat-detail">-11 inactivos</small>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-box stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Bodegas</h6>
                                    <h2 class="stat-number">7</h2>
                                    <small class="stat-detail">-2 sin espacio mínimo</small>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-warehouse stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Proveedores Activos</h6>
                                    <h2 class="stat-number">32</h2>
                                    <small class="stat-detail">-3 inactivos</small>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-truck stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Usuarios del Sistema</h6>
                                    <h2 class="stat-number">13</h2>
                                    <small class="stat-detail">-2 fuera de la empresa</small>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-users stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Quick Actions Section -->
        <section class="actions-section">
            <div class="card actions-card">
                <div class="card-header actions-header">
                    <h5 class="actions-title">Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row actions-grid">
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Producto")" class="btn btn-action btn-primary-action">
                                <i class="fas fa-plus action-icon"></i>
                                <span class="action-text">Nuevo Producto</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "EntradaProducto")" class="btn btn-action btn-secondary-action">
                                <i class="fas fa-arrow-right action-icon"></i>
                                <span class="action-text">Entrada Producto</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Producto")" class="btn btn-action btn-secondary-action">
                                <i class="fas fa-eye action-icon"></i>
                                <span class="action-text">Consultar Inventario</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Proveedor")" class="btn btn-action btn-secondary-action">
                                <i class="fas fa-table action-icon"></i>
                                <span class="action-text">Ver Proveedores</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Main Content Section -->
        <section class="main-content-section">
            <div class="row">
                <!-- Recent Entries Table -->
                <div class="col-md-8">
                    <div class="card entries-card">
                        <div class="card-header entries-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="entries-title">Últimas Entradas Registradas</h5>
                                <button class="btn btn-outline-primary btn-sm view-all-btn">
                                    <i class="fas fa-eye"></i> Ver todo
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 entries-table">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Producto</th>
                                            <th>Fecha</th>
                                            <th>Bodega</th>
                                            <th>Proveedor</th>
                                            <th>Cantidad</th>
                                            <th>Usuario</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="product-name">Filtro de aceite</td>
                                            <td class="entry-date">2025-06-09</td>
                                            <td class="warehouse-name">Bodega Central</td>
                                            <td class="supplier-name">Repuestos del Valle</td>
                                            <td class="quantity">15</td>
                                            <td class="user-name">Juan Pérez</td>
                                        </tr>
                                        <tr>
                                            <td class="product-name">Pastillas de freno</td>
                                            <td class="entry-date">2025-06-09</td>
                                            <td class="warehouse-name">Bodega Norte</td>
                                            <td class="supplier-name">Frenos y Más S.A.</td>
                                            <td class="quantity">10</td>
                                            <td class="user-name">María García</td>
                                        </tr>
                                        <tr>
                                            <td class="product-name">Bujías NGK BKR6E</td>
                                            <td class="entry-date">2025-06-09</td>
                                            <td class="warehouse-name">Bodega Central</td>
                                            <td class="supplier-name">Importadora JAPAN</td>
                                            <td class="quantity">24</td>
                                            <td class="user-name">Carlos López</td>
                                        </tr>
                                        <tr>
                                            <td class="product-name">Amortiguador delantero</td>
                                            <td class="entry-date">2025-06-09</td>
                                            <td class="warehouse-name">Bodega Sur</td>
                                            <td class="supplier-name">AutoParts CR</td>
                                            <td class="quantity">8</td>
                                            <td class="user-name">Ana Martín</td>
                                        </tr>
                                        <tr>
                                            <td class="product-name">Correa de distribución</td>
                                            <td class="entry-date">2025-06-09</td>
                                            <td class="warehouse-name">Bodega Central</td>
                                            <td class="supplier-name">Proveedora Técnica</td>
                                            <td class="quantity">12</td>
                                            <td class="user-name">Luis Rodríguez</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Alerts Sidebar -->
                <div class="col-md-4">
                    <div class="card alerts-card">
                        <div class="card-header alerts-header">
                            <h5 class="alerts-title">
                                <i class="fas fa-exclamation-triangle text-warning"></i> Alertas del Sistema
                            </h5>
                        </div>
                        <div class="card-body alerts-body">
                            <div class="alert alert-warning alert-dismissible fade show system-alert" role="alert">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Producto "Placeholder" ingresado sin categoría</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                            
                            <div class="alert alert-warning alert-dismissible fade show system-alert" role="alert">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Entrada duplicada detectada: "Placeholder"</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                            
                            <div class="alert alert-warning alert-dismissible fade show system-alert" role="alert">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Producto ingresado con stock cero: "Placeholder"</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Daily Summary Section -->
        <section class="summary-section">
            <div class="card summary-card">
                <div class="card-body">
                    <h5 class="summary-title">Resumen del Día</h5>
                    <div class="row text-center summary-stats">
                        <div class="col-md-4">
                            <h3 class="summary-number text-primary">12</h3>
                            <p class="summary-label">Entradas hoy</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="summary-number text-success">6</h3>
                            <p class="summary-label">Productos distintos</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="summary-number text-info">3</h3>
                            <p class="summary-label">Proveedores involucrados</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
