@model PitStop_Parts_Inventario.Models.ViewModels.PagedResult<PitStop_Parts_Inventario.Models.MarcaModel>
@{
    ViewData["Title"] = "Marcas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/marcas.css" asp-append-version="true" />
}

<div class="container-fluid">
        <!-- Header Section -->
        <section class="header">
            <div class="row align-items-center mb-4">
                <div class="col-md-8">
                    <h2 class="header-title">Marca</h2>
                    <p class="text-muted header-subtitle">Página de gestión de marcas</p>
                </div>
            </div>
        </section>

        <!-- Search and Actions Section -->
        <section class="search-actions-section">
            <form method="get" asp-action="Index" id="filtrosForm">
                <div class="search-actions-container">
                    <div class="search-wrapper">
                        <div class="search-container">
                            <input type="text" name="filtros.SearchTerm" class="form-control search-input" placeholder="Buscar marca..." value="@ViewBag.SearchTerm">
                            <i class="fas fa-search search-icon"></i>
                        </div>
                    </div>
                    
                    <div class="actions-wrapper">
                        <div class="filter-container">
                            <select name="filtros.SoloActivos" class="form-select filter-select" onchange="document.getElementById('filtrosForm').submit();">
                                <option value="">Todas las marcas</option>
                                <option value="true" selected="@(ViewBag.SoloActivos == true ? "selected" : null)">Solo activas</option>
                                <option value="false" selected="@(ViewBag.SoloActivos == false ? "selected" : null)">Solo inactivas</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-secondary">
                            <i class="fas fa-filter"></i> Filtrar
                        </button>
                        
                        <button class="btn btn-crear" data-bs-toggle="modal" data-bs-target="#nuevaMarcaModal">
                            <i class="fas fa-plus"></i> Crear
                        </button>
                    </div>
                </div>
                <input type="hidden" name="numeroPagina" value="@Model.PageNumber" />
            </form>
        </section>

        <!-- Table Section -->
        <section class="table-section">
            <div class="card table-card">
                <div class="card-header table-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="table-title mb-0">Tabla de Marcas</h5>
                        <div class="pagination-info">
                            <span class="pagination-text">Mostrando @(((Model.PageNumber - 1) * Model.PageSize) + 1) - @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalRecords)) de @Model.TotalRecords marcas</span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 brands-table">
                            <thead class="table-dark">
                                <tr>
                                    <th class="col-id">Id Marca</th>
                                    <th class="col-marca">Marca</th>
                                    <th class="col-descripcion">Descripción</th>
                                    <th class="col-acciones">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Data.Any())
                                {
                                    @foreach (var marca in Model.Data)
                                    {
                                        <tr class="table-row">
                                            <td class="brand-id">@marca.IdMarca</td>
                                            <td class="brand-name">@marca.Nombre</td>
                                            <td class="brand-description">@marca.Descripcion</td>
                                            <td class="actions-cell">
                                                <button class="btn btn-action btn-info" title="Visualizar" onclick="abrirModalVisualizarMarca(@marca.IdMarca)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-action btn-edit" title="Editar" onclick="abrirModalEditarMarca(@marca.IdMarca)">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-action btn-delete" title="Eliminar" onclick="abrirModalEliminarMarca(@marca.IdMarca)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No se encontraron marcas</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

        <!-- Stats Cards Section -->
        <section class="stats-section">
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Total Marcas</h6>
                                    <h2 class="stat-number">@Model.TotalRecords</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-tags stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card stat-card-current">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Página Actual</h6>
                                    <h2 class="stat-number">@Model.PageNumber</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-file-alt stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Total Páginas</h6>
                                    <h2 class="stat-number">@Model.TotalPages</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-copy stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Por Página</h6>
                                    <h2 class="stat-number">@Model.PageSize</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-list stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pagination Section -->
        @if (Model.TotalPages > 1)
        {
            <section class="pagination-section mt-4">
                <div class="pagination-wrapper">
                    <nav aria-label="Navegación de marcas">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?numeroPagina=@(Model.PageNumber - 1)&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.SoloActivos=@ViewBag.SoloActivos">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-left"></i>
                                    </span>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                if (i == Model.PageNumber)
                                {
                                    <li class="page-item active">
                                        <span class="page-link">@i</span>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?numeroPagina=@i&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.SoloActivos=@ViewBag.SoloActivos">@i</a>
                                    </li>
                                }
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?numeroPagina=@(Model.PageNumber + 1)&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.SoloActivos=@ViewBag.SoloActivos">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-right"></i>
                                    </span>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </section>
        }
    </div>

<section class="modal-container">
<!-- Modal Nuevo Marca -->
<div class="modal fade" id="nuevaMarcaModal" tabindex="-1" aria-labelledby="nuevaMarcaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="nuevaMarcaModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>Nueva Marca
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="nuevaMarcaForm">
                    <div class="mb-3">
                        <label for="nombreMarca" class="form-label">Nombre Marca</label>
                        <input type="text" class="form-control" id="nombreMarca" name="nombre" placeholder="Ingrese la marca..." required>
                    </div>
                    <div class="mb-3">
                        <label for="descripcionMarca" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcionMarca" name="descripcion" rows="4" placeholder="Agregar descripción de la marca..." required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" onclick="guardarMarca()">
                    <i class="fas fa-save me-1"></i>Guardar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Editar Marca -->
<div class="modal fade" id="editarMarcaModal" tabindex="-1" aria-labelledby="editarMarcaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="editarMarcaModalLabel">
                    <i class="fas fa-edit me-2"></i>Editar Marca
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editarMarcaForm">
                    <div class="mb-3">
                        <label for="editNombreMarca" class="form-label">Nombre Marca</label>
                        <input type="text" class="form-control" id="editNombreMarca" name="nombre" required>
                    </div>
                    <div class="mb-3">
                        <label for="editDescripcionMarca" class="form-label">Descripción</label>
                        <textarea class="form-control" id="editDescripcionMarca" name="descripcion" rows="4" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editEstadoMarca" class="form-label">Estado</label>
                        <select class="form-select" id="editEstadoMarca" name="estado_id" required>
                            <option value="">Seleccionar estado</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" onclick="actualizarMarca()">
                    <i class="fas fa-save me-1"></i>Actualizar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Visualizar Marca -->
<div class="modal fade" id="visualizarMarcaModal" tabindex="-1" aria-labelledby="visualizarMarcaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="visualizarMarcaModalLabel">
                    <i class="fas fa-eye me-2 text-info"></i>Detalles de la Marca
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="product-info">
                    <div class="product-info-label">Nombre de la Marca</div>
                    <p class="product-info-value" id="visualizarNombreMarca">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Descripción</div>
                    <p class="product-info-value" id="visualizarDescripcionMarca">Cargando...</p>
                </div>
                
                <!-- Información adicional -->
                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="product-info">
                            <div class="product-info-label">Estado</div>
                            <p class="product-info-value">
                                <span class="badge bg-success fs-6" id="visualizarEstadoMarca">Cargando...</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="product-info">
                            <div class="product-info-label">Productos</div>
                            <p class="product-info-value">
                                <span class="badge bg-warning text-dark fs-6" id="visualizarProductosMarca">Cargando...</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="product-info">
                            <div class="product-info-label">Fecha de Registro</div>
                            <p class="product-info-value" id="visualizarFechaMarca">Cargando...</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cerrar
                </button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#editarMarcaModal">
                    <i class="fas fa-edit me-1"></i>Editar Marca
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Eliminar Marca -->
<div class="modal fade" id="eliminarMarcaModal" tabindex="-1" aria-labelledby="eliminarMarcaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="eliminarMarcaModalLabel">
                    <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Eliminar Marca
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>¡Atención!</strong> Esta acción no se puede deshacer.
                </div>
                <p class="text-white mb-3">¿Está seguro que desea eliminar la siguiente marca?</p>
                <div class="bg-dark p-3 rounded">
                    <p class="text-white mb-1"><strong>Nombre:</strong> <span id="eliminarNombreMarca">-</span></p>
                    <p class="text-white mb-0"><strong>Descripción:</strong> <span id="eliminarDescripcionMarca">-</span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" onclick="eliminarMarca()">
                    <i class="fas fa-trash me-1"></i>Eliminar Marca
                </button>
            </div>
        </div>
    </div>
</div>
</section>