@model PitStop_Parts_Inventario.Models.ViewModels.PagedResult<PitStop_Parts_Inventario.Models.BodegaModel>
@{
    ViewData["Title"] = "Bodegas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/bodegas.css" asp-append-version="true" />
}

<div class="container-fluid">
        <!-- Header Section -->
        <section class="header">
            <div class="row align-items-center mb-4">
                <div class="col-md-8">
                    <h2 class="header-title">Bodega</h2>
                    <p class="text-muted header-subtitle">Página de gestión de bodega</p>
                </div>
            </div>
        </section>

        <!-- Search and Actions Section -->
        <section class="search-actions-section">
            <form method="get" asp-action="Index" id="filtrosForm">
                <div class="search-actions-container">
                    <div class="search-wrapper">
                        <div class="search-container">
                            <input type="text" name="filtros.SearchTerm" class="form-control search-input" placeholder="Buscar bodega..." value="@ViewBag.SearchTerm">
                            <i class="fas fa-search search-icon"></i>
                        </div>
                    </div>
                    
                    <div class="actions-wrapper">
                        <div class="filter-container">
                            <select name="filtros.SoloActivos" class="form-select filter-select" onchange="document.getElementById('filtrosForm').submit();">
                                <option value="">Todas las bodegas</option>
                                <option value="true" selected="@(ViewBag.SoloActivos == true ? "selected" : null)">Solo activas</option>
                                <option value="false" selected="@(ViewBag.SoloActivos == false ? "selected" : null)">Solo inactivas</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-secondary">
                            <i class="fas fa-filter"></i> Filtrar
                        </button>
                        
                        <button class="btn btn-crear" data-bs-toggle="modal" data-bs-target="#nuevaBodegaModal">
                            <i class="fas fa-plus"></i> Crear
                        </button>
                    </div>
                </div>
                <input type="hidden" name="numeroPagina" value="@Model.PageNumber" />
            </form>
        </section>

        <!-- Table Section -->
        <section class="table-section">
            <div class="card table-card">
                <div class="card-header table-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="table-title mb-0">Tabla de Bodega</h5>
                        <div class="pagination-info">
                            <span class="pagination-text">Página @Model.PageNumber de @Model.TotalPages</span>
                            @if (Model.PageNumber > 1)
                            {
                                <a href="?numeroPagina=@(Model.PageNumber - 1)&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.SoloActivos=@ViewBag.SoloActivos" class="btn btn-pagination">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-pagination" disabled>
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                            }
                            
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <a href="?numeroPagina=@(Model.PageNumber + 1)&filtros.SearchTerm=@ViewBag.SearchTerm&filtros.SoloActivos=@ViewBag.SoloActivos" class="btn btn-pagination">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-pagination" disabled>
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 warehouses-table">
                            <thead class="table-dark">
                                <tr>
                                    <th class="col-id">Id Bodega</th>
                                    <th class="col-nombre">Nombre</th>
                                    <th class="col-descripcion">Descripción</th>
                                    <th class="col-ubicacion">Ubicación</th>
                                    <th class="col-acciones">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Data.Any())
                                {
                                    @foreach (var bodega in Model.Data)
                                    {
                                        <tr class="table-row">
                                            <td class="warehouse-id">@bodega.IdBodega</td>
                                            <td class="warehouse-name">@bodega.Nombre</td>
                                            <td class="warehouse-description">@bodega.Descripcion</td>
                                            <td class="warehouse-location">@bodega.Ubicacion</td>
                                            <td class="actions-cell">
                                                <button class="btn btn-action btn-info" title="Visualizar" onclick="abrirModalVisualizarBodega('@bodega.IdBodega')">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-action btn-edit" title="Editar" onclick="abrirModalEditarBodega('@bodega.IdBodega')">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-action btn-delete" title="Eliminar" onclick="abrirModalEliminarBodega('@bodega.IdBodega')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-4">
                                            <i class="fas fa-search fa-2x mb-2"></i>
                                            <p class="mb-0">No se encontraron bodegas con los criterios especificados.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

        <!-- Stats Cards Section -->
        <section class="stats-section">
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Total Bodegas</h6>
                                    <h2 class="stat-number">@Model.TotalRecords</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-warehouse stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stat-card stat-card-current">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Página actual</h6>
                                    <h2 class="stat-number">@Model.PageNumber</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-file-alt stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stat-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="stat-info">
                                    <h6 class="stat-label">Total Páginas</h6>
                                    <h2 class="stat-number">@Model.TotalPages</h2>
                                </div>
                                <div class="stat-icon-container">
                                    <i class="fas fa-copy stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

<section class="modal-container">
<!-- Modal Nueva Bodega -->
<div class="modal fade" id="nuevaBodegaModal" tabindex="-1" aria-labelledby="nuevaBodegaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="nuevaBodegaModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>Nueva Bodega
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="nuevaBodegaForm">
                    <div class="mb-3">
                        <label for="nombreBodega" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombreBodega" name="nombre" placeholder="Ingrese el nombre de la bodega..." required />
                    </div>
                    <div class="mb-3">
                        <label for="descripcionBodega" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcionBodega" name="descripcion" rows="4" placeholder="Ingrese la descripción..." required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="ubicacionBodega" class="form-label">Ubicación</label>
                        <input type="text" class="form-control" id="ubicacionBodega" name="ubicacion" placeholder="Ingrese la ubicación..." required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" onclick="guardarBodega()">
                    <i class="fas fa-save me-1"></i>Guardar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Editar Bodega -->
<div class="modal fade" id="editarBodegaModal" tabindex="-1" aria-labelledby="editarBodegaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="editarBodegaModalLabel">
                    <i class="fas fa-edit me-2"></i>Editar Bodega
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="editarBodegaForm">
                    <div class="mb-3">
                        <label for="editNombreBodega" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="editNombreBodega" name="nombre" required />
                    </div>
                    <div class="mb-3">
                        <label for="editDescripcionBodega" class="form-label">Descripción</label>
                        <textarea class="form-control" id="editDescripcionBodega" name="descripcion" rows="4" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editUbicacionBodega" class="form-label">Ubicación</label>
                        <input type="text" class="form-control" id="editUbicacionBodega" name="ubicacion" required />
                    </div>
                    <div class="mb-3">
                        <label for="editEstadoBodega" class="form-label">Estado</label>
                        <select class="form-select" id="editEstadoBodega" name="estado_id" required>
                            <option value="">Seleccionar estado</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" onclick="actualizarBodega()">
                    <i class="fas fa-save me-1"></i>Actualizar
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Visualizar Bodega -->
<div class="modal fade" id="visualizarBodegaModal" tabindex="-1" aria-labelledby="visualizarBodegaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="visualizarBodegaModalLabel">
                    <i class="fas fa-eye me-2 text-info"></i>Detalles de la Bodega
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <div class="product-info">
                    <div class="product-info-label">Nombre</div>
                    <p class="product-info-value" id="visualizarNombreBodega">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Descripción</div>
                    <p class="product-info-value" id="visualizarDescripcionBodega">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Ubicación</div>
                    <p class="product-info-value" id="visualizarUbicacionBodega">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Productos Almacenados</div>
                    <span class="badge bg-warning text-dark fs-6" id="visualizarProductosBodega">Cargando...</span>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Fecha de Registro</div>
                    <p class="product-info-value" id="visualizarFechaBodega">Cargando...</p>
                </div>
                <div class="product-info">
                    <div class="product-info-label">Estado</div>
                    <span class="badge bg-success text-dark fs-6" id="visualizarEstadoBodega">Cargando...</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cerrar
                </button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#editarBodegaModal">
                    <i class="fas fa-edit me-1"></i>Editar Bodega
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Eliminar Bodega -->
<div class="modal fade" id="eliminarBodegaModal" tabindex="-1" aria-labelledby="eliminarBodegaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="eliminarBodegaModalLabel">
                    <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Eliminar Bodega
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>¡Atención!</strong> Esta acción no se puede deshacer.
                </div>
                <p class="text-white mb-3">¿Está seguro que desea eliminar la siguiente bodega?</p>
                <div class="bg-dark p-3 rounded">
                    <p class="text-white mb-1"><strong>Nombre:</strong> <span id="eliminarNombreBodega">-</span></p>
                    <p class="text-white mb-0"><strong>Ubicación:</strong> <span id="eliminarUbicacionBodega">-</span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" onclick="eliminarBodega()">
                    <i class="fas fa-trash me-1"></i>Eliminar Bodega
                </button>
            </div>
        </div>
    </div>
</div>
</section>