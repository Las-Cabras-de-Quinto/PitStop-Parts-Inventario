@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<style>
    body {
        background-color: #f2f2f2;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-card {
        width: 100%;
        max-width: 420px;
        margin: 80px auto;
        background-color: #fff;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .logo-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        
        display:  inline-block;
       
    }


    .login-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .login-header .icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .login-header h2 {
            margin-bottom: 0.25rem;
        }

        .login-header p {
            font-size: 0.95rem;
            color: #666;
        }

    .login-btn-container {
        margin-bottom: 20px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 15px;
    }


    .login-btn-container {
        margin-bottom: 20px; /* Espacio entre el botón y los botones extra */
    }


    .input-group {
        margin-bottom: 1rem;
    }

        .input-group label {
            display: block;
            margin-bottom: 0.25rem;
            font-weight: 500;
        }

        .input-group input {
            width: 100%;
            padding: 0.6rem;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

    .options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

        .options a {
            color: #007bff;
            text-decoration: none;
        }

    .checkbox-container {
        margin-bottom: 1rem;
    }

        .checkbox-container label {
            display: flex;
            align-items: center;
            font-size: 0.9rem;
        }

        .checkbox-container input {
            margin-right: 0.5rem;
            width: auto;
        }

    button[type="submit"] {
        width: 100%;
        padding: 0.75rem;
        background-color: #0f1f29;
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #182e3a;
        }

    .footer-links {
        text-align: center;
        margin-top: 1rem;
        font-size: 0.9rem;
    }

        .footer-links a {
            color: #007bff;
            text-decoration: none;
            display: block;
            margin-bottom: 0.5rem;
        }

    .external-logins {
        margin-top: 1.5rem;
        text-align: center;
    }

        .external-logins p {
            margin-bottom: 0.5rem;
        }

    .external-buttons button.btn-provider {
        margin: 0.2rem;
        background-color: #e4e4e4;
        color: #333;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
    }

    .extra-buttons-container {
        display: flex;
        justify-content: flex-end; /* Totalmente a la derecha */
        margin-bottom: 15px;
        width: 100%;
    }

    .extra-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn-link-custom {
        background-color: #0f1f29; /* Color oscuro como "Iniciar sesión" */
        color: white;
        padding: 6px 14px;
        border-radius: 6px;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-link-custom:hover {
            background-color: #000; /* Más oscuro al pasar mouse */
            box-shadow: 0px 3px 6px rgba(0,0,0,0.25);
            transform: translateY(-1px);
        }

</style>


        <div class="login-card">
            <div class="login-header">
                <div class="icon">🔐</div>
                <h2>Iniciar Sesión</h2>
                <p>Ingresa tus credenciales para acceder</p>
            </div>
  
    <form method="post">
        <!-- campos del login -->
    </form>



    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        
        <div class="input-group">
            <label asp-for="Input.Email">Correo Electrónico</label>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        
        <div class="input-group">
            <label asp-for="Input.Password">Contraseña</label>
            <input asp-for="Input.Password" type="password" autocomplete="current-password" aria-required="true" placeholder="contraseña" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        
        <div class="checkbox-container">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <!--       BOTON DE LOGIN        -->
        <div class="login-btn-container">
            <button id="login-submit" type="submit">Iniciar Sesión</button>
        </div>

       
        <div class="extra-buttons">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn-link-custom">
                Registrarse
            </a>
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="btn-link-custom">
                Reenviar confirmación
            </a>
        </div>
        
        <div class="footer-links">
            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="external-logins">
                <p>O inicia sesión con:</p>
                <div class="external-buttons">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn-provider" name="provider" value="@provider.Name" title="Iniciar sesión con @provider.DisplayName">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="external-logins">
                <p style="font-size: 0.9rem;">
                    No hay servicios de autenticación externa configurados. Consulta
                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">esta guía</a>.
                </p>
            </div>
        }
    </form>

    <div class="footer-links small">
        <a>Sistema de entradas PitStopParts</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
