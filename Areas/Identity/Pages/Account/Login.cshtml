@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}



<style>


    body {
        background-color: #f2f2f2;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-card {
        width: 100%;
        max-width: 420px;
        margin: 80px auto;
        background-color: #fff;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .login-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .login-header .icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .login-header h2 {
            margin-bottom: 0.25rem;
        }

        .login-header p {
            font-size: 0.95rem;
            color: #666;
        }

    .input-group {
        margin-bottom: 1rem;
    }

        .input-group label {
            display: block;
            margin-bottom: 0.25rem;
            font-weight: 500;
        }

        .input-group input {
            width: 100%;
            padding: 0.6rem;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

    .options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

        .options a {
            color: #007bff;
            text-decoration: none;
        }

    button[type="submit"] {
        width: 100%;
        padding: 0.75rem;
        background-color: #0f1f29;
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #182e3a;
        }

    .footer-link {
        text-align: center;
        margin-top: 1rem;
        font-size: 0.9rem;
    }

        .footer-link a {
            color: #007bff;
            text-decoration: none;
        }

    .external-logins {
        margin-top: 1.5rem;
        text-align: center;
    }

        .external-logins p {
            margin-bottom: 0.5rem;
        }

    .external-buttons button.btn-provider {
        margin: 0.2rem;
        background-color: #e4e4e4;
        color: #333;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
    }



</style>


<div class="login-card">
    <div class="login-header">
        <div class="icon">🔒</div>
        <h2>Iniciar Sesión</h2>
        <p>Ingresa tus credenciales para acceder al sistema</p>
    </div>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="input-group">
            <label asp-for="Input.Email">Usuario / Email</label>
            <input asp-for="Input.Email" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="input-group">
            <label asp-for="Input.Password">Contraseña</label>
            <input asp-for="Input.Password" type="password" autocomplete="current-password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="options">
            <label>
                <input asp-for="Input.RememberMe" /> Recordarme
            </label>
            <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
        </div>

        <button id="login-submit" type="submit">Iniciar Sesión</button>

        <div class="footer-link">
            ¿No tienes una cuenta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regístrate aquí</a>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="external-logins">
                <p>O inicia sesión con:</p>
                <div class="external-buttons">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn-provider" name="provider" value="@provider.Name" title="Iniciar sesión con @provider.DisplayName">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </div>
        }
    </form>

    <div class="footer-link small">
        <a asp-page="./ResendEmailConfirmation">¿No recibiste tu confirmación de correo?</a><br />
        <a href="/">Sistema de entradas PitStopParts</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
