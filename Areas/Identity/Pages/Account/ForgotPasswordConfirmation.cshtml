@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Confirmación de Recuperación";
}

<style>
    body {
        background-color: #f2f2f2;
        font-family: 'Segoe UI', sans-serif;
    }

    .confirmation-card {
        width: 100%;
        max-width: 420px;
        margin: 80px auto;
        background-color: #fff;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .confirmation-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .confirmation-header .icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .confirmation-header h2 {
            margin-bottom: 0.25rem;
        }

        .confirmation-header p {
            font-size: 0.95rem;
            color: #666;
            line-height: 1.5;
        }

    .footer-links {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 0.9rem;
    }

        .footer-links a {
            color: #007bff;
            text-decoration: none;
            display: block;
            margin-bottom: 0.5rem;
        }

    .success-message {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
        padding: 1rem;
        border-radius: 6px;
        margin-bottom: 1rem;
        text-align: center;
    }
</style>

<div class="confirmation-card">
    <div class="confirmation-header">
        <div class="icon">✉️</div>
        <h2>Correo Enviado</h2>
    </div>

    <div class="success-message">
        <p>
            Por favor, revisa tu correo electrónico para restablecer tu contraseña.
        </p>
    </div>

    <div class="footer-links">
        <a asp-page="./Login">Volver al inicio de sesión</a>
        <a asp-page="./Register">Crear nueva cuenta</a>
    </div>

    <div class="footer-links small">
        <a href="/">Sistema de entradas PitStopParts</a>
    </div>
</div>
