@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<style>
    body {
        background-color: #f2f2f2;
        font-family: 'Segoe UI', sans-serif;
    }

    .reset-password-card {
        width: 100%;
        max-width: 420px;
        margin: 80px auto;
        background-color: #fff;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .reset-password-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .reset-password-header .icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .reset-password-header h2 {
            margin-bottom: 0.25rem;
        }

        .reset-password-header p {
            font-size: 0.95rem;
            color: #666;
        }

    .input-group {
        margin-bottom: 1rem;
    }

        .input-group label {
            display: block;
            margin-bottom: 0.25rem;
            font-weight: 500;
        }

        .input-group input {
            width: 100%;
            padding: 0.6rem;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

    button[type="submit"] {
        width: 100%;
        padding: 0.75rem;
        background-color: #0f1f29;
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #182e3a;
        }

    .footer-links {
        text-align: center;
        margin-top: 1rem;
        font-size: 0.9rem;
    }

        .footer-links a {
            color: #007bff;
            text-decoration: none;
            display: block;
            margin-bottom: 0.5rem;
        }
</style>

<div class="reset-password-card">
    <div class="reset-password-header">
        <div class="icon">🔐</div>
        <h2>Restablecer Contraseña</h2>
        <p>Ingresa tu nueva contraseña</p>
    </div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <input asp-for="Input.Code" type="hidden" />
        
        <div class="input-group">
            <label asp-for="Input.Email">Correo Electrónico</label>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        
        <div class="input-group">
            <label asp-for="Input.Password">Nueva Contraseña</label>
            <input asp-for="Input.Password" type="password" autocomplete="new-password" aria-required="true" placeholder="Ingresa tu nueva contraseña" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        
        <div class="input-group">
            <label asp-for="Input.ConfirmPassword">Confirmar Nueva Contraseña</label>
            <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" aria-required="true" placeholder="Confirma tu nueva contraseña" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        
        <button type="submit">Restablecer Contraseña</button>
        
        <div class="footer-links">
            <a asp-page="./Login">Volver al inicio de sesión</a>
        </div>
    </form>

    <div class="footer-links small">
        <a href="/">Sistema de entradas PitStopParts</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
