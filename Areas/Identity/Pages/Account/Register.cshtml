@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<style>
    body {
        background-color: #f2f2f2;
        font-family: 'Segoe UI', sans-serif;
    }

    .register-card {
        width: 100%;
        max-width: 420px;
        margin: 80px auto;
        background-color: #fff;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .register-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .login-header .icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .login-header h2 {
            margin-bottom: 0.25rem;
        }

        .login-header p {
            font-size: 0.95rem;
            color: #666;
        }

    .input-group {
        margin-bottom: 1rem;
    }

        .input-group label {
            display: block;
            margin-bottom: 0.25rem;
            font-weight: 500;
        }

        .input-group input {
            width: 100%;
            padding: 0.6rem;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

    .options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

        .options a {
            color: #007bff;
            text-decoration: none;
        }

    button[type="submit"] {
        width: 100%;
        padding: 0.75rem;
        background-color: #0f1f29;
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #182e3a;
        }

    .footer-link {
        text-align: center;
        margin-top: 1rem;
        font-size: 0.9rem;
    }

        .footer-link a {
            color: #007bff;
            text-decoration: none;
        }

    .external-logins {
        margin-top: 1.5rem;
        text-align: center;
    }

        .external-logins p {
            margin-bottom: 0.5rem;
        }

    .external-buttons button.btn-provider {
        margin: 0.2rem;
        background-color: #e4e4e4;
        color: #333;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
    }
</style>

<div class="register-card">
    <div class="register-header">
        <div class="icon">📝</div>
        <h2>Crear Cuenta</h2>
        <p>Completa el formulario para registrarte</p>
    </div>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="input-group">
            <label asp-for="Input.Email">Correo Electrónico</label>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="input-group">
            <label asp-for="Input.Password">Contraseña</label>
            <input asp-for="Input.Password" type="password" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="input-group">
            <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
            <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit">Registrarse</button>

        <div class="footer-link">
            ¿Ya tienes una cuenta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Inicia sesión</a>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="external-logins">
                <p>O regístrate con:</p>
                <div class="external-buttons">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn-provider" name="provider" value="@provider.Name" title="Registrarse con @provider.DisplayName">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="external-logins">
                <p style="font-size: 0.9rem;">
                    No hay servicios de autenticación externa configurados. Consulta
                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">esta guía</a>.
                </p>
            </div>
        }
    </form>

    <div class="footer-link small">
        <a asp-page="./ResendEmailConfirmation">¿No recibiste tu confirmación de correo?</a><br />
        <a href="/">Sistema de entradas PitStopParts</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}